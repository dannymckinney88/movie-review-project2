<nav>
  <ul>
    <li><a href="/">Home</a></li>
    <% if (!currentUser) { %>
      <li><a href="/auth/signup">Signup</a></li>
      <li><a href="/auth/login">Login</a></li>
    <% } else { %>
      <li><a href="/auth/logout">Logout</a></li>
      <li><a href="/profile">Profile</a></li>
      <li><a href="/favorites">Favorites</a></li>
    <% } %>
  </ul>
</nav>

<div class="bg-light">
  <!--buttons-->
  <nav>
  <div class="d-flex justify-content-center">
    <!--Sign Up button-->
    <div class="text-center">
      <a href="/" class="btn btn-primary"><i class="fas fa-home  ml-3"</i></i></a>
      </div>
    
    <div class="text-center">
      <a href="/auth/signup" class="btn btn-primary" data-toggle="modal" data-target="#signupPage">Sign Up<i class="fas fa-user-plus  ml-3"</i></i></a>
      </div>
      <!--Sign In button-->
      <div class="text-center">
        <a href="/auth/login" class="btn btn-primary" data-toggle="modal" data-target="#signinPage">Sign In<i class="fas fa-sign-in-alt ml-3"></i></a>
      </div>
    </div>
    <!--Sign up page-->
    <div class="modal fade" id="signupPage">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header text-center">
            <h4 class="modal-title text-center w-100 font-weight-bold">Sign Up</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
          </div>
          <div class="modal-body mx-3">
            <div class="md-form mb-5">
              <i class="fas fa-user  grey-text"></i>
              <input type="text" class="form-control validate" placeholder="enter name">
              <label data-error="wrong" data-success="right">Name</label>
            </div>
            
            <div class="md-form mb-5">
              <i class="fas fa-envelope  grey-text"></i>
              <input type="email" class="form-control validate" placeholder="enter email">
              <label data-error="wrong" data-success="right">Email</label>
            </div>
            
            <div class="md-form mb-5">
              <i class="fas fa-lock  grey-text"></i>
              <input type="password" class="form-control validate" placeholder="enter password">
              <label data-error="wrong" data-success="right">Password</label>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button class="btn btn-primary">Sign Up</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--Sign In -->
  <div class="modal fade" id="signinPage">
    <div class="modal-dialog">
      <div class="modal-content">
        
        <div class="modal-header text-center">
          <h3 class="modal-title w-100 dark-grey-text font-weight-bold">Sign In</h3>
          <button type="button" class="close" data-dismiss="modal" aria-label="close">&times;</button>
        </div>
        
        <div class="modal-body mx-4">
          <div class="md-form">
            <input type="email" class="form-control validate" placeholder="email">
            <label data-errpr="wrong" data-success="right">Email</label>
          </div>
          
          <div class="md-form">
            <input type="password" class="form-control validate" placeholder="password">
            <label data-errpr="wrong" data-success="right">Password</label>
          </div>
          <div class="text-center mb-3">
            <button type="button" class="btn btn-primary btn-blocl z-depth-la">Sign In</button>
          </div>

          <p class="font-small blue-text d-flex justify-content-center">or sign in with:</p>
          <div class="row my-3 justify-content-center">
            <button type="button" class="btn btn-primary z-depth-la"><i class="fab fa-facebook-f text-center"></i></button>
            <button type="button" class="btn btn-purple z-depth-la"><i class="fab fa-twitter text-center"></i></button>
            <button type="button" class="btn btn-red z-depth-la"><i class="fab fa-google text-center"></i></button>
          </div>


        </div>
      </div>
    </div>
  </div>
  
  
</nav>
</div>