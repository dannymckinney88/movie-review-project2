
<!-- diplay all moveis from search -->
<div class="container">
    <% movies.forEach(movie =>{ %> 
        <div class="row search-container">
            <div class="col d-flex" >
              <!-- movie image -->
                <img class="search-img" src="<%= `https://image.tmdb.org/t/p/w500${movie.poster_path}` %> " alt="Picture of <%= movie.title %> ">
                <div class="d-flex flex-column justify-content-around">
                  <div class="d-flex justify-content-between">
                    <!-- movie title -->
                    <h3 class=""><a href="/movies/info/<%= movie.id %> "> <%= movie.title %> </a> </h3>
                  </div>
                  <p class= "movie-search-overview"> <%= movie.overview %>  </p>
                </div>
            </div>
        </div>
    <% }) %> 
      <nav aria-label="Page navigation example">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
              <span class="sr-only">Previous</span>
            </a>
          </li>
          <!-- sets page limit to a max of 10 pages per search -->
          <% for(let i =0 ; i < pages && i < 10; i++) {%> 
          <li class="page-item">
              <form action="/movies/<%= i+1 %> ">
                <input hidden type="text" name="page" value=<%= `${i+1}` %>>
                <input hidden type="text" name="movies" value="<%= movieSearch  %>" >
            
                <button><%= `${i+1}` %></button>
              </form>
         </li>
          <% } %> 
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </nav>
</div>

