<div class="container">
    <div class="row">
        <div class="col">
            <div class="d-flex">
                <img class="info-img" src="<%= `https://image.tmdb.org/t/p/w500/${info.poster_path}` %>" alt="">
                <div class="d-flex flex-column">
                    <h2><%= info.title %> </h2>
                    <div class ="d-flex">
                        <p> <%= info.release_date %>  (<%= info.production_companies[0].origin_country %>) </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <iframe width="640" height="410" src=" <%= `https://www.youtube.com/embed/${info.videos.results[0].key}` %> " frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    </div>
          
    
    <form action="/reviews" method="GET">
        <input hidden type="text" name="movieId" value="<%= info.id %> ">
        <button type="submit">Write A Review</button>
    </form>
</div>
