<div class="container-fluid">
    <div class="row">
        <div  class="col")>
            <style>
                 .info-img-bg::before {    
                     content: "";
                     background-image: url('<%= `https://image.tmdb.org/t/p/w1920_and_h800_multi_faces/${info.backdrop_path}` %>');
                     background-size:cover;
                     background-position: right -200px top;
                     position:absolute;
                     top: 0px;
                     right: 0px;
                     bottom: 0px;
                     left: 0px;
                     opacity: 0.3;
                     /* height: 200px; */
                    } 
            </style>
            <div class="d-flex info-img-bg">
                <img class="info-img position-relative" src="<%= `https://image.tmdb.org/t/p/w500/${info.poster_path}` %>" alt="">
                <div class="d-flex flex-column info-wrapper position-relative">
                    <h2><%= info.title %> </h2>
                    <div class ="d-flex">
                        <p> <%= info.release_date %>  (<%= info.production_companies[0].origin_country %>) </p>
                            <% info.genres.forEach(genre=>{ %> 
                                <p class="info-genre">- <%= genre.name %>  </p>
                            <% }) %> 
                    </div>

                    <div class="d-flex justify-content-start">
                        <p><b> User score</b>: <%= info.vote_average %>  </p>
<!-- modal start -->    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    <i class="fas fa-play"></i>
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            <iframe width="640" height="410" src=" <%= `https://www.youtube.com/embed/${info.videos.results[0].key}` %> " frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </button>
          
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>

                    </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <iframe width="640" height="410" src=" <%= `https://www.youtube.com/embed/${info.videos.results[0].key}` %> " frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
      </div>
      
      <form action="/reviews" method="GET">
          <input hidden type="text" name="movieId" value="<%= info.id %> ">
          <button type="submit">Write A Review</button>
      </form>
</div>

